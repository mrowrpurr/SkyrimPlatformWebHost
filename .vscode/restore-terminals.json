{
  "artificialDelayMilliseconds": 300,
  "keepExistingTerminalsOpen": false,
  "runOnStartup": true,
  "terminals": [
    {
      "splitTerminals": [
        {
          "name": "WebUI Module",
          "commands": ["cd src/Module", "npm i", "npm run watch"]
        },
        {
          "name": "Tests",
          "commands": ["cd src/Module", "npm i", "npm run test:watch"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "WebViewHost",
          "commands": ["cd src/UI", "npm i", "npm run watch"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "Tests (Module+WebViewHost)",
          "commands": ["cd src/Tests", "npm i", "npm run watch"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "WebUI Plugin (runtime)",
          "commands": ["cd src/Module", "npm i", "npm run watch"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "WebUI.Papyrus (runtime)",
          "commands": ["cd src/PapyrusIntegration", "npm i", "npm run watch"]
        }
      ]
    }
  ]
}