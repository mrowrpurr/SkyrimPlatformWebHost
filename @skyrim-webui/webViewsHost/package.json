{
  "name": "@skyrim-webui/webViewsHost",
  "version": "1.0.0",
  "description": "Implementation of WebViewsHost JavaScript frontend which hosts all WebViews for WebUI",
  "main": "index.js",
  "scripts": {
    "watch": "tsc-watch -p tsconfig.build.json --onSuccess \"npm run build:deploy\"",
    "test:watch": "jest --config jest.config.js --watch",
    "test": "jest --config jest.config.js",
    "build": "tsc -p tsconfig.build.json",
    "pack": "webpack",
    "deploy": "@powershell copy build/webViewsHost.js ../../WebUI/__WebUI__/",
    "build:deploy": "webpack && npm run deploy"
  },
  "author": "Mrowr Purr <mrowr.purr@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@skyrim-webui/testUtils": "file:../testUtils",
    "@types/jest": "^27.0.3",
    "@types/jsdom": "^16.2.13",
    "jest": "^27.4.4",
    "jsdom": "^19.0.0",
    "ts-jest": "^27.1.1",
    "ts-loader": "^9.2.6",
    "tsc": "^2.0.3",
    "typescript": "^4.5.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}
