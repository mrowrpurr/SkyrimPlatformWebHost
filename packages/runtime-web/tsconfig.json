{
  "verbose": true,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "typeRoots": ["../../node_modules/@types"],
    "declaration": true,
    "outDir": "dist",
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts"
  ]
}
