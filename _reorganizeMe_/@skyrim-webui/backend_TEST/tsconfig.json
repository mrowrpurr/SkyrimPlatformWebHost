{
  "verbose": true,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["esnext"],
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist",
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
  ],
}
